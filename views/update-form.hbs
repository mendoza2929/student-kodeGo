<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Edit Student</title>
</head>

<body class="container">
    <h1 class="text-center">{{title}}</h1>
      
    <form action="/auth/updateStudent" method="POST">
        {{#each students}}
        <div class="row">
            <div class="mb-3 col-lg-12">
                <input type="text" class="form-control" name="student_id" aria-describedby="Student Id"
                    value="{{this.student_id}}" hidden>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-lg-6">
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name" aria-describedby="First Name"
                    value="{{this.first_name}}">
            </div>

            <div class="mb-3 col-lg-6">
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name" aria-describedby="Last Name"
                    value="{{this.last_name}}">
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-lg-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="email"
                    value="{{this.email}}" readonly>
            </div>

            <div class="mb-3 col-lg-6">
                <label for="courses" class="form-label">Selected Course:</label>
                <select class='form-select' id='course_id' name='course_id'>
                {{!-- <option value="{{this.course_id}}">{{this.course_name}}</option> --}}
                    <option value="1">Front-end Development</option>
                    <option value="2">Back-end Development</option>
                    <option value="3">Fullstack Development</option>
                </select>
                </div>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <button type="submit" name="submit" id="submit" value="Submit" aria-describedby="Submit"
                class="btn btn-primary">Update</button>
        </div>

        {{!-- <div class="d-flex justify-content-center mb-3">
            <a href='/auth/dashboard'><button type="button" name="submit" id="submit" value="Submit"
                    aria-describedby="Submit" class="btn btn-secondary">Cancel</button></a>
        </div> --}}
            {{/each}}
    </form>
    <div>
         {{#if message }}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
                {{/if}}
    </div>
</body>

</html>